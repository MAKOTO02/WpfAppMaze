<Window x:Class="WpfAppMaze.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="260" Width="400">
    <StackPanel>
        <TextBlock Text="Enter Width:" Margin="10"/>
        <TextBox Name="WidthTextBox" Margin="10"/>
        <TextBlock Text="Enter Height:" Margin="10"/>
        <TextBox Name="HeightTextBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Randomize:" Margin="10"/>
            <CheckBox HorizontalAlignment="Center" Margin="10"  Click="RandomizeCheckBox_Click"></CheckBox>
            <TextBlock Text="DrawPath:" Margin="10"/>
            <CheckBox HorizontalAlignment="Center" Margin="10" Click="DrawPathCheckBox_Click"></CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="100" Margin="10" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>